{
  "name": "@vangware/test",
  "description": "uvu test wrapper that enforces legibility",
  "version": "2.0.2",
  "author": {
    "name": "Vangware",
    "url": "https://vangware.com"
  },
  "bugs": {
    "url": "https://github.com/vangware/test/issues"
  },
  "dependencies": {
    "dequal": "^2.0.2",
    "uvu": "^0.3.3"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.2",
    "@types/node": "^14.6.2",
    "@types/prettier": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@vangware/base": "^2.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-ban": "^1.5.1",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  },
  "files": [
    "cjs",
    "esm"
  ],
  "homepage": "https://github.com/vangware/test#readme",
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean pre-compile lint"
    }
  },
  "keywords": [
    "legibility",
    "legible",
    "test",
    "tests"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "peerDependencies": {
    "uvu": "^0.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vangware/test.git"
  },
  "scripts": {
    "clean": "rimraf ./{cjs,esm}",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --project tsconfig.cjs.json",
    "compile:esm": "tsc --project tsconfig.esm.json",
    "lint": "eslint src/*.ts",
    "pre-compile": "run-s pre-compile:*",
    "pre-compile:cjs": "tsc --noemit --project tsconfig.cjs.json",
    "pre-compile:esm": "tsc --noemit --project tsconfig.esm.json",
    "prepublishOnly": "run-s compile prettify",
    "prettify": "run-s prettify:*",
    "prettify:cjs": "prettier --write './cjs/*.{js,ts}'",
    "prettify:esm": "prettier --write './esm/*.{js,ts}'",
    "prettify:esm-fix": "prettify-esm ./esm"
  },
  "source": "./src/index.ts",
  "types": "./esm/index.d.ts"
}
