{
  "name": "@vangware/test",
  "description": "âœ… Equality test with enforced legibility",
  "version": "5.0.1",
  "author": {
    "name": "Vangware",
    "url": "https://vangware.com"
  },
  "bin": "./cjs/bin/index.js",
  "bugs": {
    "url": "https://github.com/vangware/test/issues"
  },
  "dependencies": {
    "@vangware/forcli": "^1.1.15",
    "@vangware/utils": "^6.0.1",
    "diff": "^5.0.0",
    "ts-node": "^9.0.0"
  },
  "devDependencies": {
    "@types/diff": "^4.0.2",
    "@types/eslint": "^7.2.5",
    "@types/node": "^14.14.9",
    "@types/prettier": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "@vangware/base": "4.1.5",
    "c8": "^7.3.5",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-ban": "^1.5.1",
    "eslint-plugin-functional": "^3.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    }
  },
  "files": [
    "cjs",
    "esm"
  ],
  "homepage": "https://test.vangware.com",
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean pre-compile lint test docs"
    }
  },
  "keywords": [
    "legibility",
    "legible",
    "test",
    "testing",
    "tests",
    "vangware"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vangware/test.git"
  },
  "scripts": {
    "clean": "rimraf ./{cjs,esm}",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --project tsconfig.cjs.json",
    "compile:esm": "tsc --project tsconfig.esm.json",
    "docs": "typedoc --gitRevision main --mode file --out ./docs ./src/index.ts",
    "lint": "eslint {src,tests}/**/*.ts",
    "pre-compile": "run-s pre-compile:*",
    "pre-compile:cjs": "tsc --noemit --project tsconfig.cjs.json",
    "pre-compile:esm": "tsc --noemit --project tsconfig.esm.json",
    "prepublishOnly": "run-s compile prettify",
    "prettify": "prettier --write './{cjs,esm}/**/*.{js,ts}'",
    "test": "c8 --reporter=html --reporter=text-summary --reporter=lcov ts-node ./tests"
  },
  "source": "./src/index.ts",
  "types": "./esm/index.d.ts"
}
